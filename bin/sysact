#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’lock\nğŸšªleave dwm\nğŸ”renew dwm\nğŸ»hibernate\nğŸ”ƒreboot\nğŸ¥¾shutdown\nğŸ’¤sleep\nğŸ“ºdisplay off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ” renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ¥¾ shutdown')sudo shutdown now ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
